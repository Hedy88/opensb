<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{% block head %}{% endblock %}
		{% if theme != 'vanilla' %}
		<link rel="stylesheet" id="bootstrap" href="assets/bs{% if theme == 'dark' %}-dark{% endif %}.css" type="text/css">
		{% else %}
		<link id="bootstrap" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
		{% endif %}
		<!-- jquery and bootstrap 5 javascript
		(IMPORTANT: even though bootstrap 5 claims to no longer support jquery
		we still need it for the settings dropdown menu)
		-->
		<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
		<script src="vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
		<script src="assets/common.js"></script>
		<title>{% block title %}{% endblock %} - squareBracket</title>
	</head>
	<body>
		<nav id="navbar" class="navbar {% if theme == 'dark' %} navbar-dark bg-dark {% elseif theme == 'vanilla' %} navbar-light bg-light {% else %} navbar-dark bg-primary {% endif %} navbar-static-top navbar-expand-md" style="margin-bottom:20px">
			<div class="container">
				<a class="navbar-brand" href="/">
				<img src="/assets/logo.png" alt="[sb]" height="24" class="d-inline-block align-text-top">
				squareBracket Alpha 3
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div id="navbarCollapse" class="collapse navbar-collapse">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item"><a href="/" class="nav-link"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#house-door"/>
						</svg> {{ __("Home") }}</a></li>
						<li class="nav-item"><a href="browse.php" class="nav-link"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#play-btn"/>
						</svg> {{ __("Browse") }}</a></li>
						{% for menu_link in menu_links %}
						<li class="nav-item"><a href="{{ menu_link.url }}" class="nav-link"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#{{ menu_link.icon }}"/>
						</svg>{{ menu_link.name }}</a></li>
						{% endfor %}
					</ul>
					<ul class="navbar-nav">
						{% if logged_in %}
						<div class="dropdown text-end">
						  <style>
							#dropdownUser1::after {
								content: none;
							}
						  </style>
						  <a href="#" class="dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
							<img src="{{ profile_image(current_user.username) }}" alt="{{ current_user.username }}" class="rounded" width="32" height="32" style="margin-top: 4px;">
						  </a>
						  <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" style="">
							<li><a class="dropdown-item" href="#">{{ __("Settings") }}</a></li>
							<li><a class="dropdown-item" href="#">{{ __("Profile") }}</a></li>
							<li><hr class="dropdown-divider"></li>
							<li><a class="dropdown-item" href="#">{{ __("Log Out") }}</a></li>
						  </ul>
						</div>
						<li class="nav-item"><a href="user.php?name={{ current_user.username }}" class="nav-link">{{ current_user.username }}</a></li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								{{ __("Settings") }}
							</a>
							<ul class="dropdown-menu" id="mainMenu" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" href="settings.php"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#person-fill"/>
						</svg> {{ __("Profile Settings") }}</a></li>
								<li><a class="dropdown-item" id="themeSelect" href="#"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#palette"/>
						</svg> {{ __("Change theme") }}</a></li>
							</ul>
							<ul class="dropdown-menu" id="themeSelection" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" id="back" href="#">{{ __("Back") }}</a></li>
								<li><a class="dropdown-item" id="light" href="#">{{ __("Light") }}</a></li>
								<li><a class="dropdown-item" id="dark" href="#">{{ __("Dark") }}</a></li>
								<li><a class="dropdown-item" id="vanilla" href="#">{{ __("Bootstrap Default") }}</a></li>
							</ul>
						</li>
						<li class="nav-item"><a href="/upload.php" class="nav-link"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#camera-video"/>
						</svg> {{ __("Upload") }}</a></li>
						<li class="nav-item"><a href="logout.php" class="nav-link">{{ __("Log Out") }}</a></li>
						{% else %}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								{{ __("Settings") }}
							</a>
							<ul class="dropdown-menu" id="mainMenu" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" id="themeSelect" href="#"><svg class="bi" width="16" height="16" fill="currentColor">
							<use xlink:href="vendor/twbs/bootstrap-icons/bootstrap-icons.svg#palette"/>
						</svg> {{ __("Change theme") }}</a></li>
							</ul>
							<ul class="dropdown-menu" id="themeSelection" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" id="back" href="#">{{ __("Back") }}</a></li>
								<li><a class="dropdown-item" id="light" href="#">{{ __("Light") }}</a></li>
								<li><a class="dropdown-item" id="dark" href="#">{{ __("Dark") }}</a></li>
								<li><a class="dropdown-item" id="vanilla" href="#">{{ __("Bootstrap Default") }}</a></li>
							</ul>
						</li>
						<li class="nav-item"><a href="login.php" class="nav-link">{{ __("Login") }}</a></li>
						<li class="nav-item"><a href="register.php" class="nav-link">{{ __("Register") }}</a></li>
						{% endif %}
					</ul>
				</div>
				<!--/.nav-collapse -->
			</div>
		</nav>
		{% block precontent %}{% endblock %}
		<div class="container">
			{% block content %}{% endblock %}
		</div>
	</body>
</html>
