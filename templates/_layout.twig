<!doctype html>
<html lang="en">
    
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" id="bootstrap" href="scssrender.php?path=bootstrap/bs{% if theme == 'dark' %}-dark{% endif %}.scss" type="text/css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <!-- jquery and bootstrap 3 javascript -->
		<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
		<script src="vendor/twbs/bootstrap/dist/js/bootstrap.min.js"></script>
        <title>{% block title %}{% endblock %} - squareBracket</title>
		<script>
			$(document).ready(function(){
				$('#themeSelector').change(function(){
					var data= $('#themeSelector').val();
					console.log(data);
					if (data == 1) {
						$("#bootstrap").attr("href", "scssrender.php?path=bootstrap/bs.scss");
						$("#navbar").attr("class", "navbar navbar-light bg-light navbar-static-top navbar-expand-md");
						Cookies.set("theme", "light", { expires: 1000 });
					} else if (data == 2) {
						$("#bootstrap").attr("href", "scssrender.php?path=bootstrap/bs-dark.scss");
						$("#navbar").attr("class", "navbar navbar-dark bg-dark navbar-static-top navbar-expand-md");
						Cookies.set("theme", "dark", { expires: 1000 });
					}
				});
			});
		</script>
    </head>
    
    <body>
        <nav id="navbar" class="navbar {% if theme == 'dark' %} navbar-dark bg-dark {% else %} navbar-light bg-light {% endif %} navbar-static-top navbar-expand-md" style="margin-bottom:20px">
            <div class="container">
                <a class="navbar-brand" href="/">[squareBracket] Milestone 1</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
                <div id="navbarCollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a href="/" class="nav-link"><i class="bi bi-house-door"></i> Home</a></li>
                        <li class="nav-item"><a href="browse.php" class="nav-link"><i class="bi bi-film"></i> Browse</a></li>
                    </ul>
					<ul class="navbar-nav">
						{% if logged_in %}
                        <li class="nav-item"><a href="#" class="nav-link">{{ current_user.username }}</a></li>
                        <li class="nav-item"><a href="/upload.php" class="nav-link"><i class="bi-upload"></i> Upload</a></li>
                        <li class="nav-item"><a href="logout.php" class="nav-link">Log Out</a></li>
						{% else %}
                        <li class="nav-item"><a href="login.php" class="nav-link">Login</a></li>
                        <li class="nav-item"><a href="register.php" class="nav-link">Register</a></li>
						{% endif %}
					</ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </nav>{% block precontent %}{% endblock %}
        <div class="container">
			{% block content %}{% endblock %}
			<div style="margin-bottom:20px"></div>
			<select class="form-select form-select-sm" id="themeSelector">
				<option value="1" {% if theme == 'light' %}selected="selected"{% endif %}> Light</option>
				<option value="2" {% if theme == 'dark' %}selected="selected"{% endif %}>Dark</option>
			</select>
		</div>
    </body>
</html>