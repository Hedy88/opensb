{% extends "_layout.twig" %}

{% block title %}User{% endblock %}

	{% block precontent %}
	<style>
		{{ profCss | raw }}
	</style>
	<div class="p-5 mb-4 bg-custom-profile" style="margin-top:-20px;">
		<div style="padding:50px;"></div>
	</div>
	{% endblock %}
	{% block content %}
	<div class="row" style="margin-top:-150px;">
		<div class="col-md-6 col-lg-4">
			<div class="card">
				<div class="card-body">
					<div class="d-flex justify-content-center">
						<img src="{{ profile_image(user.username) }}" alt="pfp">
					</div>
					<div class="caption">
						<h3>{{ user.username }}</h3>
						<p>Joined {{ user.joined | date('F jS, Y') }}</p>
						<p>User Description here once we put that in the SQL Database.</p>
						<p>
							<a href="#" class="btn btn-warning" role="button">Subscribe</a>  
							<a href="#"class="btn btn-secondary" role="button">Friend</a>
						</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-6 col-lg-8">
			<div class="card">
				<div class="card-body">
					<div class="caption">
						<h3>Most recent uploaded video</h3>
						{{ video_box(latestVideo)}} 
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endblock %}