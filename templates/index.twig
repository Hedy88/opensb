{% extends "_layout.twig" %}

{% block title %}{{ __("Home") }}{% endblock %}
	{% block content %}
<div class="row">
	<div class="col-xl-9">
			<div class="card" style="border-left: 0;border-top: 0;">
				<div class="card-header bg-dark text-white">{{ __("From squareBracket") }}</div>
				<div class="card-body">
					{% for video in videos %}
						{{ video_box(video) }}
					{% else %}
						<p>{{ __("No uploaded videos. :^((") }}</p>
					{% endfor %}
				</div>
			</div>
		</div>
	<div class="col-xl-3">
		<h3>{{ __("Hi there, %s", [current_user.username]) }}</h3>
		</p>
			<img class="float-end rounded" style="max-width: 25%;" src="{{ profile_image(current_user.username) }}"  alt="pfp">
			<p class="text-start float-start">
			<a href="settings.php">{{ __("Edit my profile") }}</a><br>
			<a href="browse.php">{{ __("Browse") }}</a>
			</p>
		</p>
		<br><br><br>
		<h3>{{ __("Spotlight") }}</h3>
		<h4>{{ __("Welcome to squareBracket!") }}</h4>
		<p>{{ __("squareBracket has been rewritten. Remember the old days of inconsistent UI/CSS and garbage insecure code? That's in the past.") }}</p>
	</div>
</div>
	{% endblock %}