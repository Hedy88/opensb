{% extends "_layout.twig" %}

{% block title %}{{ __("Home") }}{% endblock %}
	{% block content %}
<div class="row">
	<div class="col-xl-9">
			<div class="card" style="border-left: 0;border-top: 0;">
				<div class="card-header bg-dark text-white">{{ __("New Videos") }}</div>
				<div class="card-body">
					{% for video in videos %}
						{{ video_box(video) }}
					{% else %}
						<p>{{ __("No uploaded videos. :^((") }}</p>
					{% endfor %}
				</div>
			</div>
		</div>
	<div class="col-xl-3">
		{% if logged_in %}
			<h3>{{ __("Hi there, %s", [current_user.username]) }}</h3>
			</p>
				<img class="float-end rounded" style="max-width: 35%" src="{{ profile_image(current_user.username) }}"  alt="pfp">
				<p class="text-start float-start">
					<!--todo: fix overflow, probably shorten the numbers too.-->
					<p>You have 56854657 subscribers.</p>
					<p>You have {{ totalViews }} views.</p>
					<p>Your account was made {{ creationDate | relative_time }}.</p>
					<!-- <a href="settings.php">{{ __("Edit my profile") }}</a><br> -->
					<!-- <a href="browse.php">{{ __("Browse") }}</a> -->
				</p>
			</p>
		{% else %}
			<h3>{{ __("Welcome to squareBracket!") }}</h3>
			<p>{{ __("This is like any other video sharing site... for now at least.") }}</p>
			<div class="btn-group">
				<a href="register.php" class="btn btn-primary">Get started</a>
				<a href="login.php" class="btn btn-light">Login</a>
			</div>
		{% endif %}
		<hr/>
		<h3>{{ __("Spotlight") }}</h3>
		<p>{{ __("squareBracket has been rewritten. Remember the old days of inconsistent UI/CSS and garbage insecure code? That's in the past.") }}</p>
		<hr/>
		<h3>{{ __("Featured Videos") }}</h3>
		{% for video in featuredVideos %}
			{{ small_video_box(video) }}
		{% else %}
			<p>{{ __("No featured videos. :^((") }}</p>
		{% endfor %}
	</div>
</div>
	{% endblock %}