{% extends "_layout-login.twig" %}

{% block title %}Register{% endblock %}

	{% block content %}
{% if error %}
	<div class="alert alert-danger" role="alert">{{ error }}</div>
{% endif %}

<main class="form-signin">
<div class="container">
</div>
<!-- HOLY SHIT the page looked broken for a while.
register page should be merged with login page on sbnext 
