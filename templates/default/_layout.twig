<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	{% block head %}{% endblock %}
	{% if theme != 'vanilla' %}
	<link rel="stylesheet" id="bootstrap" href="assets/bs{% if theme == 'dark' %}-dark{% endif %}.css" type="text/css">
	{% else %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	{% endif %}
	<!-- jquery and bootstrap 5 javascript
	(IMPORTANT: even though bootstrap 5 claims to no longer support jquery
	we still need it for the settings dropdown menu)
	-->
	<script src="https://code.jquery.com/jquery-3.6.0.js"
		integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
	<script src="vendor/twbs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="assets/common.js"></script>
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/site.webmanifest">
	<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#0065d8">
	<meta name="apple-mobile-web-app-title" content="squareBracket">
	<meta name="application-name" content="squareBracket">
	<meta name="msapplication-TileColor" content="#2d89ef">
	<meta name="msapplication-TileImage" content="/mstile-144x144.png">
	<meta name="theme-color" content="#0065d8">
	<title>{% block title %}{% endblock %} - squareBracket</title>
</head>
<body>
	<nav id="navbar" class="navbar {% if theme == 'dark' %} navbar-dark bg-dark {% else %} navbar-light bg-light {% endif %} navbar-static-top navbar-expand-md">
		<div class="container">
			<a class="navbar-brand" href="/"><img src="/assets/logo.png" alt="[sb]" height="32"
					class="d-inline-block align-text-top"></a>
			<form class="d-flex" method="GET" action="search.php">
				<input name="query" class="form-control me-2" type="search" placeholder="{{ __(" Search") }}"
					aria-label="Search">
				<button class="btn btn-success" type="submit">
					{{ icon('search', 20) }}
				</button>
			</form>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div id="navbarCollapse" class="collapse navbar-collapse">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
				<ul class="navbar-nav">
					<div class="dropdown">
						<li class="nav-item">
							<style>
								#openSettings::after {
									content: none;
								}

								#openSettings.nav-link {
									padding: 0.25rem;
								}
							</style>
							<a href="#" id="openSettings" class="dropdown-toggle nav-link" data-bs-toggle="dropdown"
								aria-expanded="false">
								{% if logged_in %} <img src="{{ profile_image(current_user.username) }}"
									alt="{{ current_user.username }}" class="rounded" width="36" height="36"> {{ current_user.username }}
								{% else %}<img src="/assets/profileguest.png" alt="Guest" class="rounded" width="36"
									height="36"> {{ __("Not signed in") }}{% endif %}
							</a>
						</li>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdown" id="mainMenu">
							{% if logged_in %}
								<li><a class="dropdown-item" href="settings.php">{{ icon('tools', 20) }} {{ __("Settings") }}</a></li>
							{% endif %}
							<li><a class="dropdown-item" id="themeSelect" href="#">{{ icon('brush', 20) }} {{ __("Change theme") }}</a></li>
							{% if logged_in %}
							<li><a class="dropdown-item" href="user.php?name={{ current_user.username }}">{{ icon('person-lines-fill', 20) }} {{ __("My profile") }}</a></li>
							<li><hr class="dropdown-divider"></li>
							<li><a class="dropdown-item" href="logout.php">{{ icon('door-open', 20) }} {{ __("Sign off") }}</a></li>
							{% endif %}
						</ul>
						<ul class="dropdown-menu" id="themeSelection" aria-labelledby="navbarDropdown">
							<li><a class="dropdown-item" id="back" href="#">{{ __("Back") }}</a></li>
							<li><a class="dropdown-item" id="light" href="#">{{ __("Light") }}</a></li>
							<li><a class="dropdown-item" id="dark" href="#">{{ __("Dark") }}</a></li>
							<li><a class="dropdown-item" id="vanilla" href="#">{{ __("Bootstrap Default") }}</a></li>
						</ul>
					</div>
					{% if logged_in %}
						<li class="nav-item"><a href="upload.php" class="nav-link">{{ icon('camera-video', 20) }} {{ __("Upload") }}</a></li>
						<li class="nav-item"><a href="logout.php" class="nav-link">{{ icon('door-open', 20) }} {{ __("Sign off") }}</a></li>
					{% else %}
						<li class="nav-item"><a href="login.php" class="nav-link">{{ icon('key', 20) }} {{ __("Sign in") }}</a></li>
						<li class="nav-item"><a href="register.php" class="nav-link">{{ icon('pencil-square', 20) }} {{ __("Sign up") }}</a></li>
					{% endif %}
				</ul>
			</div>
			<!--/.nav-collapse -->
		</div>
	</nav>
	<nav class="py-1 bg-dark" style="margin-bottom:20px">
		<div class="container">
			<ul class="nav me-auto">
				<li class="nav-item"><a href="/" class="nav-link link-light px-2">{{ icon('house-door', 16) }} {{ __("Home") }}</a></li>
				<li class="nav-item"><a href="browse.php" class="nav-link link-light px-2">{{ icon('play-btn', 16) }} {{ __("Browse") }}</a></li>
			</ul>
		</div>
	</nav>
	{% block precontent %}{% endblock %}
	<div class="container">
		{% block content %}{% endblock %}
		<footer class="text-center pt-3 my-2 text-muted border-top">
		<h4 class="mb-2">squareBracket Alpha 3.5</h4>
			{{ __("By squareBracket contributors") }} Â· 2020-{{ 'now' | date('Y') }}
		<br><br>
		{% for menu_link in menu_links %}
					<a href="{{ menu_link.url }}" class="text-muted px-2">{{ icon(menu_link.icon, 16) }} {{ menu_link.name }}</a>
		{% endfor %}
		</footer>
		{% block postcontent %}{% endblock %}
	</div>
</body>
</html>