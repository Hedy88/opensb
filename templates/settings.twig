{% extends "_layout.twig" %}

{% block title %}{{ __("User Settings") }}{% endblock %}

	{% block content %}
	<div class="row">
	<div class="col-lg-2 col-4">
	<ul class="list-group">
  <li class="list-group-item"><img src="{{ profile_image(current_user.username) }}" alt="{{ current_user.username }}" class="rounded" width="40" height="40"> {{ current_user.username }}</li>
  <a href="settings.php" class="list-group-item list-group-item-action active">{{ __("Profile settings") }}</a>
  <a href="partnership.php" class="list-group-item list-group-item-action">{{ __("Partnership") }}</a>
</ul>
	</div>
	<div class="col-lg-10 col-8">
	<div class="p-4 bg-light border rounded-3">
		  <div class="row">
		  <div class="col-lg-1 col-3">
          <img class="img-fluid" src="/assets/tweakutility.svg" alt="{{ __("Settings") }}">
		  </div>
		  <div class="col-lg-11 col-9">
          <h2>{{ __("Profile settings") }}</h2>
          {{ __("Change the appearance of your profile.") }} (please add pfp and partner-only background changing for fuck sakes)
		  </div>
        </div></div>
		<br>
		<form action="settings.php" method="post">
			<textarea class="form-control" id="description" id="floatingInput" name="description" maxlength="500" style="overflow:hidden;resize:none" rows="3" placeholder="{{ __("Description") }}">{{ current_user.description }}</textarea>
			<select class="form-select" name="language">
				{% for code,name in glob_languages %}
					{% if name %}<option value="{{ code }}" {% if code == current_user.language %}selected{% endif %}>{{ name }}</option>{% endif %}
				{% endfor %}
			</select>
			<input type="color" class="form-control" id="color" name="color" value="{{ current_user.color }}">
			<input type="hidden" name="updatesettings" value="yes">
			<input type="submit" class="btn btn-primary" name="action" value="{{ __("Update") }}">
		</form>
	</div>
	{% endblock %}