{% extends "_layout.twig" %}

{% block title %}Recent changes{% endblock %}
{% set noindex = true %}

	{% block content %}
{% set date = -1 %}

{% for rev in revisions %}
	{% if rev.time|date('Y-m-d') != date %}
		{% if date != -1 %}</ul>{% endif %}

		{% set date = rev.time | date('Y-m-d')%}
		<b>{{ date }}</b>
		<ul>
	{% endif %}
	<li>
		{{ rev.time | date('H:i') }}
		&nbsp;<a href="/wiki/{{ rev.page | replace({' ': '_'}) }}">{{ rev.page }}</a>
			({% if rev.revision == 1 %}diff{% else %}<a href="/wiki/diff.php?page={{ rev.page | replace({' ': '_'}) }}&prev={{ rev.revision - 1 }}&next={{ rev.revision }}" rel="nofollow">diff</a>{% endif %}
				| <a href="/wiki/viewhistory.php?page={{ rev.page | replace({' ': '_'}) }}" rel="nofollow">hist</a>)
		{% if rev.revision != 1 %}
			{% if rev.sizediff > 0 %}
				<span style="color:#0f0">(+{{ rev.sizediff }})</span>
			{% elseif rev.sizediff < 0 %}
				<span style="color:#f00">({{ rev.sizediff }})</span>
			{% else %}
				<span style="color:#aaa">(0)</span>
			{% endif %}
		{% else %}
			<em>New</em>
		{% endif %}
		&nbsp;{{ userlink(rev, "u_") }}
		{% if rev.description and rev.type == 0 %} <em>({{ rev.description }})</em>{% elseif rev.note %}({{ rev.note }}){% endif %}
	</li>
{% endfor %}
</ul>
	{% endblock %}
