<!DOCTYPE html>
<html lang="{{ __("en-US") }}">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %} - Qobo</title>
    {% block head %}{% endblock %}
    <link rel="manifest" href="/assets/icons/site.webmanifest">
    <link rel="shortcut icon" href="/assets/icons/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/icons/favicon-16x16.png">
    <link rel="mask-icon" href="/assets/icons/safari-pinned-tab.svg" color="#1b93ff">
    <meta name="apple-mobile-web-app-title" content="Qobo">
    <meta name="application-name" content="Qobo">
    <meta name="msapplication-TileColor" content="#1d3fc4">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/style.css" type="text/css">
    {% if theme == 'dark' %}
        <link id="darkthm" rel="stylesheet" href="/assets/css/darkmode.css" type="text/css">
    {% endif %}
    {% if theme == 'nostalgia' %}
        <link id="nostalgia" rel="stylesheet" href="/assets/css/nostalgia.css" type="text/css">
    {% endif %}
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    <script src="/assets/common.js"></script>
	{% block script %}{% endblock %}
    <script>
        subscribe_string = '{{ __("Follow") }}';
        unsubscribe_string = '{{ __("Unfollow") }}';
    </script>
    <style>
        {% if pfpRoundness == 'square' %}
        .rounded {
            border-radius: 0;
        }

        {% elseif pfpRoundness == 'rounded' %}
        .rounded {
            border-radius: 10%;
        }

        {% endif %}
        {% block customcss %}{% endblock %}
    </style>
</head>
<body>
{% if theme == 'nostalgia' %}
    {% include "components/nostalgia/_header.twig" %}
{% else %}
    <div id="guide">
		{% for link in navigationList %}
        <a href="{{ link.url }}" class="button button-secondary-invis">
            {{ icon("#{ link.icon }-fill", 20) }}
        </a>
		{% endfor %}
    </div>
    {% include "components/_header.twig" %}
{% endif %}
<div class="page">
    {% block precontent %}{% endblock %}
    <div class="container">
        {% if userbandata %}
            <div class="header_message header-danger">
                <h1>{{ __("Sorry %s, you are banned from Qobo.", [userdata.name]) }}</h1>
                <strong>{{ userbandata.reason }}</strong>
                <p>{{ __("This ban is not set to expire.") }}</p>
                {# do we really need ban durations? #}
            </div>
        {% endif %}
        {% block content %}{% endblock %}
    </div>
    <footer>
        <div class="footer">
            <img src="/assets/logo-wordmark{% if theme == 'dark' %}-dark{% endif %}.png">
            <p>{{ __("Version") }} {{ version }} · <strong>{{ __("By the Qobo contributors") }}</strong> · 2020-{{ 'now' | date('Y') }}
                | <strong><a href="/statistics.php">{{ __("Statistics") }}</a></strong> · <strong><a href="/news.php">{{ __("What's new") }}</a></strong>
            </p>
            <h5>{{ __("Running on Git commit: ") }} <a
                        href="https://github.com/pf94/qobo/commit/{{ git_commit() }}">{{ git_commit() }}</a><br>
            </h5>
            {% if isMaintenance != true %}
                <a class="button button-neutral button-small btnAdd" role="button">{{ __("Options") }}</a>
                <div id="myModal" class="bg-neutral" style="padding:0.3em;">

                </div>
            {% endif %}
        </div>
    </footer>
</div>
</body>
</html>