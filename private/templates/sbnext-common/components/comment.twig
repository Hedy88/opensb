<div class="grid commentPost">
    <div class="col-md-3">
        {{ userlink(data, 'u_') }}
		<br>
		<span class="time">{{ data.date | relative_time }}</span>
    </div>
    <div class="col-md-13" id="{{ data.comment_id }}">
        <div class="comment">
            {{ data.comment | markdown }}
        </div>
        <br>
        <p>
            {% if data.replycount > 0 %}
                <a onclick="showReplies({{ data.comment_id }})">{{ __("Show replies") }}</a> |
            {% endif %}
            {% if data.id|length > 0 %}
                <a onclick="reply({{ data.comment_id }})">{{ __("Reply") }}</a>
            {% endif %}
        </p>
    </div>
</div>
