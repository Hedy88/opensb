{% extends "_layout.twig" %}

{% block title %}{{ __("Browse") }} {% if page != 1 %}{{ __("(Page %s)", [page]) }}{% endif %}{% endblock %}

	{% block content %}
        <h1>{{ title }}</h1>
        <div class="grid">
            {% for level in levels %}
                {{ small_video_box(level) }}
            {% else %}
                <div class="bg-dark" style="max-width:700px;margin:auto;padding:20px;padding-bottom:100px;color:white;">
                    <h2>{{ __("There are no videos of that category.") }}</h2>
                    <hr>
                    <p>{{ __("You could create one!") }}</p>
                    <div style="text-align:center;margin:auto"><img src="{{ website_branding.assets_location }}/logo_monochrome.png" alt="{{ website_branding.name }}" style="max-width:150px;"></div>
                </div>
            {% endfor %}

            {% if type == 'all' %}
                {% set le_url = 'browse.php?page=%s' %}
            {% else %}
                {% set le_url = 'browse.php?type=' ~ type ~ '&page=%s' %}
            {% endif %}
            <div class="center">{{ pagination(level_count, glob_lpp, le_url, page) }}</div>

            <br><br>
        </div>
    {% endblock %}